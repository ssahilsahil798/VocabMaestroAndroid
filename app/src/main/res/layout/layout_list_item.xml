<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorTheme"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffad99"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/cardTitle"
        android:layout_width="0dp"
        android:textSize="24sp"
        android:text="#"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/checkbox_off_background"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/words_completed_label"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Words Leanrned"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#777"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/words_completed"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="#"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#777"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/words_total_label"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Total Words"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#777"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/words_total"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:text="#"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#777"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/percent_label"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="% Completed"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#777"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/percentage_completed"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="#"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#777"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_card"
        android:layout_margin="20dp"
        android:progressBackgroundTint="#E2E2E2"
        android:progressTint="#ff6633"
        android:layout_width="match_parent"
        style="@style/CustomProgressBarHorizontal"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffbf80"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Practice This Card"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@android:drawable/arrow_down_float"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>