<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#ffad99"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/word_detail"
                android:layout_width="0dp"
                android:textSize="22sp"
                android:text="Sample"
                android:textStyle="bold"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/word_meaning"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="adjective: a small piece of something"
            android:textStyle="normal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/word_example"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="the master handed over the sample to the desciple."
            android:textStyle="italic"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:textColor="#ff944d"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/learnt"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#70db70"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:src="@android:drawable/ic_notification_clear_all"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:background="#70db70"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Mark As Learnt"
            android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/unlearn"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#ff9999"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:background="#ff9999"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Mark As Not Learnt"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>